<tr>
  <td>
    <% if @dataset_perm_ids.include?(dataset.perm_id) %>
        <%= image('tick') -%>
    <% else %>
        <%= check_box_tag "datasets[#{dataset.perm_id}]" %>
    <% end %>
  </td>
  <td>
    <a name="<%= dataset.perm_id %>"></a>
    <%= dataset.code %>
  </td>
  <td>
    <%= format_openbis_properties(dataset.properties) %>
  </td>
  <td>
    <%= dataset.dataset_type_text %>
  </td>
  <td>
    <%= date_as_string(dataset.registration_date,false) %>
  </td>
  <td>
    <%= date_as_string(dataset.modification_date,false) %>
  </td>

  <td>
    <%= dataset.perm_id %>
  </td>

  <td>
    <% dataset.dataset_files.each do |file| %>
    <%= file.path %>
    <%= file.size %>
    <%#= link_to "Download", Seek::Openbis::DatasetFile.new().datastore_server_download_instance('file', file.dataset_id, source, dest)%>
    <%#= link_to "Download All", Seek::Openbis::DatasetFile.new().datastore_server_download_instance('datasetfile', file.dataset_id, source, dest)%>
  </td>
</tr>