<%= admin_dropdown do %>
    <% if item.can_manage? %>
        <li><%= image_tag_for_key('manage', edit_specimen_path, "Manage #{(I18n.t 'biosamples.sample_parent_term').capitalize}", nil, "Manage #{(I18n.t 'biosamples.sample_parent_term').capitalize}") %></li>
    <% elsif item.can_edit? %>
        <li><%= image_tag_for_key('edit', edit_specimen_path(item), "Edit #{(I18n.t 'biosamples.sample_parent_term').capitalize}", nil, "Edit #{(I18n.t 'biosamples.sample_parent_term').capitalize}") %></li>
    <% end %>
    <%= delete_icon(item, current_user) -%>
<% end %>
