
<%
logged_in_class = logged_in_and_registered? ? "class=logged_in" : ""
%>

<% cache "header_#{logged_in_and_registered?}" do -%>

    <ul id="header">
      <li id="seek_logo">
        <%= link_to image_tag(Seek::Config.header_home_logo_image, :alt => Seek::Config.application_name,
                              'data-tooltip' => tooltip(Seek::Config.application_name)),
                    root_path %>
      </li>

      <li id="header_text" <%= logged_in_class -%>>
        <%= render :partial => "layouts/header_text_main" -%>
      </li>

      <li id="image_block" <%= logged_in_class -%>>
            <% if Seek::Config.header_image_enabled %>
                <%= header_logo_image %>
            <% end %>
      </li>
    </ul>

<% end -%>
